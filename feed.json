---
layout: null
---

{
  "version": "https://jsonfeed.org/version/1",
  "title": "{{ site.title | escape }}",
  "home_page_url": "{{ site.url }}{{ site.baseurl }}/",
  "feed_url": "{{ site.url }}{{ site.baseurl }}/feed.json",
  "description": "{{ site.description | escape }}",
  "items": [
    {% for post in site.posts limit:30 %}
    {
      "id": "{{ post.url | prepend: site.baseurl | prepend: site.url }}",
      "url": "{{ post.url | prepend: site.baseurl | prepend: site.url }}",
      "title": "{{ post.title | escape }}",
      "summary": "{{ post.content | strip_html | strip_newlines | truncatewords: 100 | escape }}",
      "date_published": "{{ post.date | date_to_xmlschema }}",
      {% if post.image %}
      "image": "{{ post.image }}",
      {% endif %}
      "tags": [
        {% for tag in post.tags %}
        "{{ tag | escape }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      "category": "{{ post.category | escape }}"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
